#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/registry"
export VCW_STACK_GLOBAL_STACKNAMES="registry"
export VCW_STACK_GLOBAL_BOOTSTACKS="registry"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/data"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_REGISTRY_ENVIRONMENT,\
$VCW_STACK_REGISTRY_COMMAND,\
$VCW_STACK_REGISTRY_PORTS,\
$VCW_STACK_REGISTRY_VOLUMES,\
$VCW_STACK_REGISTRY_NETWORKS,\
$VCW_STACK_REGISTRY_DEPLOY_MODE,\
$VCW_STACK_REGISTRY_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="registry"
export VCW_STACK_GLOBAL_IMAGE_NAME="registry"
export VCW_STACK_REGISTRY_ENVIRONMENT=
export VCW_STACK_REGISTRY_COMMAND=
export VCW_STACK_REGISTRY_PORTS=
export VCW_STACK_REGISTRY_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume:/var/lib/registry"
export VCW_STACK_REGISTRY_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_REGISTRY_DEPLOY_MODE="replicated"
export VCW_STACK_REGISTRY_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX},/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry.loadbalancer.server.port=5000,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_registry.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\")]
${DOLLAR}{VCW_STACK_REGISTRY_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_data_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS registry.base
export VCW_STACK_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_REGISTRY_MEMORY_RESERVED}"
export VCW_STACK_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_REGISTRY_MEMORY_LIMIT}"
# END SETTINGS registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
